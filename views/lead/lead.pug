doctype html
html(lang='en')
  include ../common/head.pug
  +head("Leads")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row
          .col-md-6
            h1 Leads
            table.table
              thead
                tr
                  th(scope='col') Email
                  th(scope='col') Edit
                  th(scope='col') Action
                tr
              tbody
                  tr(id=lead.id) 
                    td
                      span #{lead.email} 
                    td
                      form(action="/lead/" + lead.id + "/edit" method="GET")
                        button(type="submit") Edit
                    td
                      form(action="/lead/" + lead.id + "/delete" method="POST") 
                        button(type="submit") Delete
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')

