doctype html
html(lang='en')
  include ../common/head.pug
  +head("Leads")
  body
    header
      include ../common/navbar.pug
      +navbar()
      .container
        .row
          .col-md-6
            h1 Leads
            table.table
              thead
                tr
                  th(scope='col') Email
                  th(scope='col') Details
                  th(scope='col') Actions
                tr
              tbody
                for lead in leads 
                  tr(id=lead.id) 
                    td
                      span #{lead.email} 
                    td
                      a(href="/lead/" + lead.id) Details   
                    td
                      button(onClick=`deleteLead('${lead.id}')`) Delete 
    include ../common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')