doctype html
html(lang='en')
  include common/head.pug
  +head("StarterMVP")
  body
    header
      include common/navbar.pug
      +navbar()
      .container
        .row
          .col-md-6
            .jumbotron
              h1.display-4 The Great Library of Leads
              p.lead
                | Enter your information into the grand database 
              hr.my-4
                |
              form(action="/", method="POST")
                .form-group
                  label(for='exampleInputEmail1') Email address
                  input#exampleInputEmail1.form-control(name="lead_email" type="email", placeholder="Enter your email address")
                  small#emailHelp.form-text.text-muted Your secret is safe with us
                button.btn.btn-primary(type='submit') Submit
    .row
      .col-md-6
        if leads
          h1 Leads
            table.table
              thead
                tr
                  th(scope='col') Email
                  th(scope='col') Details
                  th(scope='col') Actions
                tr
              tbody
                for lead in leads 
                  tr(id=lead.id) 
                    td
                      span #{lead.email} 
                    td
                      a(href="/lead/" + lead.id) Details   
                    td
                      button(onClick=`deleteLead('${lead.id}')`) Delete                                          

    include common/footer.pug
    +footer()
    script(src='/javascripts/leads.js')




